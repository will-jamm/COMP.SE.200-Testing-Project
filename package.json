  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "c8 node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "c8": {
    "reporter":  ["lcov", "text"],
    "include": [
      "src/toNumber.js",
      "src/ceil.js",
      "src/toString.js",
      "src/reduce.js",
      "src/add.js",
      "src/filter.js",
      "src/difference. js",
      "src/words.js",
      "src/map.js",
      "src/memoize.js"
    ],
    "exclude": [
      "node_modules/**",
      "src/. internal/**",
      "tests/**",
      "*. config.js"
    ],
    "all": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/.internal/"
    ],
     "coverageReporters": ["lcov", "text"]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "c8": "^10.1.3",
    "coveralls": "^3.1.1",
    "jest": "^30.2.0"
  }
}
